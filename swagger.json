{
  "openapi": "3.0.3",
  "info": {
    "version": "1.0.0",
    "title": "Connections API"
  },
  "servers": [
    {
      "url": "https://fullstackforce.onrender.com/api - API base URL"
    }
  ],
  "tags": [
    {
      "name": "user",
      "description": "Operation about users"
    }
  ],
  "paths": {
    "/users/register": {
      "post": {
        "tags": ["user"],
        "summary": "Add a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": null
      }
    },
    "/users/login": {
      "post": {
        "tags": ["user"],
        "summary": "Login user",
        "requestBody": {
          "content": null
        },
        "responses": null
      }
    },
    "/users/logout": {
      "post": {
        "tags": ["user"],
        "summary": "Logout user",
        "requestBody": {
          "content": null
        },
        "responses": null
      }
    },
    "/users/current": {
      "get": {
        "tags": ["user"],
        "summary": "Get information about current user",
        "requestBody": {
          "content": null
        },
        "responses": null
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "required": ["name", "email", "password"],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Backend-generated unique identifier."
          },
          "name": {
            "type": "string",
            "example": "Mango1"
          },
          "email": {
            "type": "string",
            "example": "mango1@gmail.com"
          },
          "birthday": {
            "type": "string",
            "example": "00.00.0000"
          },
          "phone": {
            "type": "string",
            "example": "+380000000000"
          },
          "city": {
            "type": "string",
            "example": "Kiev"
          },
          "avatarURL": {
            "type": "string"
          },
          "password": {
            "type": "string",
            "example": "123456"
          }
        }
      },
      "Pet": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Backend-generated unique identifier."
          },
          "options": {
            "type": "string",
            "description": "тут перелік параметрів: your pet, sell, lost/found, in good hands"
          },
          "name": {
            "type": "string"
          },
          "birthday": {
            "type": "string",
            "description": "тут треба подумати чи дату чи техт"
          },
          "type": {
            "type": "string",
            "description": "breed of animal"
          },
          "avatarURL": {
            "type": "string"
          }
        }
      }
    }
  }
}
