                  "imgUrl": {
                    "type": "string",
                    "description": "Path to img."
                  },
                  "title": {
                    "type": "string",
                    "description": "Title news"
                  },
                  "text": {
                    "type": "string",
                    "description": "Comments about news"
                  },
                  "date": {
                    "type": "string",
                    "description": "Date where news created"
                  },
                  "url": {
                    "type": "string",
                    "description": "Path to text news"
